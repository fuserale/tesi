<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alessandro.beacontelemetry.MainActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="ACCELLEROMETRO"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tvXAxis"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="-"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvYAxis"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="-"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvZAxis"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="-"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvTimestamp"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="-"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="48dp"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="112dp"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tvRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="REGISTRAZIONE"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="18sp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRecording"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/bStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="inizio" />

        <Button
            android:id="@+id/bStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="fine" />

        <Button
            android:id="@+id/bExport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="download dati" />
    </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/setScanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="48dp"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="256dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/testScanner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SET FOREGROUND SCANNER"
            android:textSize="12sp"
            />

        <EditText
            android:id="@+id/ForegroundScanner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
